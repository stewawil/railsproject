
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class = "main">
  <p class="signin" align="center">Login</p>
  <div class="field">
    <input class="username " type="text" align="center" placeholder="Email"<%= f.email_field :email, autofocus: true, autocomplete: "email" %>

  </div>

  <div class="field">

      <input class="password" type="text" align="center" placeholder="Password"<%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">

    <%= f.submit "Log in", class: "submit" %>

  </div>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), style: "margin-left: 30%;" %><br />
  <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
